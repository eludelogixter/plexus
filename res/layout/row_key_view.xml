<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="0dp"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:padding="16dp" >

            <ImageView
                android:id="@+id/user_photo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/key_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:layout_width="155dp"
                android:layout_height="96dp"
                android:layout_toRightOf="@+id/user_photo"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="16dp">

                <TextView
                    android:id="@+id/key_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AP8D-34GP"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_toRightOf="@+id/user_type_textview"
                    android:text="Medical Physician" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:orientation="vertical">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/key_row_checkbox"/>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>