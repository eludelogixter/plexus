<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to Favorites"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ProgressBar
            android:indeterminateDrawable="@drawable/custom_progress_bar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/add_to_fav_pbar"
            android:layout_centerVertical="true"
            android:max="100"
            android:progress="2"
            android:layout_marginLeft="135dp"
            android:layout_centerHorizontal="true" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Are you sure you want to add"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/usr_to_be_added"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_name_spec_"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/to_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="to your favorites?"
            android:textSize="15sp" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/yes_add_to_fav_btn"
            android:layout_width="100dp"
            android:layout_height="24dp"
            android:background="@drawable/buttonselector"
            android:singleLine="true"
            android:text="@string/add_spec_btn_YES"
            android:textColor="@color/colorWhite" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/no_add_to_fav_btn"
            android:layout_width="100dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/buttonselector"
            android:singleLine="true"
            android:text="@string/add_spec_btn_NO"
            android:textColor="@color/colorWhite" />


    </LinearLayout>


</LinearLayout>